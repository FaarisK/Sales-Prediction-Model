import pandas as pd, numpy as np, pathlib

base = pathlib.Path(__file__).resolve().parents[1]   # project root
raw  = base / "data" / "walmart_line_items.csv"
out  = base / "data" / "daily_features.csv"

items = pd.read_csv(raw, parse_dates=["date"])

# --- daily totals ---
daily = (items.groupby("date")["quantity"]
               .sum().rename("units_sold").reset_index())

daily["day_of_week"] = daily["date"].dt.day_name()
daily["holiday"]     = daily["date"].isin(["2025-04-18","2025-04-21"]).astype(int)
np.random.seed(123); daily["promo"] = np.random.binomial(1,0.3,len(daily))
daily["local_event"] = (daily["date"].dt.weekday==5).astype(int)

temps = np.linspace(76,84,len(daily))
rain  = [0,0,0.05,0,0,0.09,0.35,0,0,1.12,0.71,0,0,0]
daily["temperature_F"] = temps
daily["rain_inches"]   = rain

thr = daily["units_sold"].quantile(0.70)
daily["high_demand"] = (daily["units_sold"] >= thr).astype(int)

for lag in [1,2,3,7]:
    daily[f"lag{lag}"] = daily["units_sold"].shift(lag)
daily["mean7"] = daily["units_sold"].rolling(7).mean().shift(1)

daily.to_csv(out, index=False)
print(f"âœ…  Saved {out.name} with {len(daily)} rows (18 columns).")

